@{
}

@model IEnumerable<MovieModel>

<h2>Movies</h2>

<table class="table" height="100px" style="border-radius: 25px;">
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Poster</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr height="100px">
            <td>@Html.ActionLink(@movie.Title, "ViewMovie", new { movieTitle = @movie.Title , imdbID = @movie.imdbID })</td>
            <td>@movie.Year</td>
            <td><div><img src="@movie.Poster" /></div></td>
        </tr>
    }
</table>